  <script>
    function getLetter(grade, system) {
      if (system === "strict") {
        if (grade >= 92) return "A";
        if (grade >= 85) return "B";
        if (grade >= 75) return "C";
        if (grade >= 65) return "D";
        return "F";
      }
      if (system === "plusminus") {
        if (grade >= 97) return "A+";
        if (grade >= 93) return "A";
        if (grade >= 90) return "A-";
        if (grade >= 87) return "B+";
        if (grade >= 83) return "B";
        if (grade >= 80) return "B-";
        if (grade >= 77) return "C+";
        if (grade >= 73) return "C";
        if (grade >= 70) return "C-";
        if (grade >= 60) return "D";
        return "F";
      }
      if (grade >= 90) return "A";
      if (grade >= 80) return "B";
      if (grade >= 70) return "C";
      if (grade >= 60) return "D";
      return "F";
    }

    function runPrediction() {
      const current = parseFloat(document.getElementById('currentGrade').value);
      const test = parseFloat(document.getElementById('testGrade').value);
      const quiz = parseFloat(document.getElementById('quizGrade').value);
      const hw = parseFloat(document.getElementById('hwGrade').value);
      const wtT = parseFloat(document.getElementById('wtTest').value) / 100;
      const wtQ = parseFloat(document.getElementById('wtQuiz').value) / 100;
      const wtH = parseFloat(document.getElementById('wtHW').value) / 100;
      const target = document.getElementById('targetGrade').value.toUpperCase();
      const system = document.getElementById('gradingSystem').value;

      if ([current, test, quiz, hw, wtT, wtQ, wtH].some(isNaN)) {
        document.getElementById('result').innerHTML = "‚ö†Ô∏è Fill in all fields.";
        return;
      }

      const predicted = (test * wtT) + (quiz * wtQ) + (hw * wtH);
      const letter = getLetter(predicted, system);

      document.getElementById('result').innerHTML = `üìä Predicted Final Grade: ${predicted.toFixed(2)}% (${letter})`;

      let needed = 90;
      if (target === "B") needed = 80;
      if (target === "C") needed = 70;
      if (target === "D") needed = 60;

      const diff = needed - predicted;
      let advice = "";

      if (diff <= 0) {
        advice = `‚úÖ You are already on track for a ${target}! Keep it up.`;
      } else {
        advice = `üéØ You need about a ${needed}% overall. Try to raise your averages by ${diff.toFixed(1)}%.`;
      }

      document.getElementById('studyTips').innerHTML = `
        ${advice}<br><br>
        üìò <b>Study Tools:</b><br>
        ‚Ä¢ 30-minute focused study sessions<br>
        ‚Ä¢ Practice tests before exams<br>
        ‚Ä¢ Rewrite notes into flashcards<br>
        ‚Ä¢ Teach the material to someone else<br>
      `;
    }

    const STRIPE_PUBLIC_KEY = "pk_test_51RT2IC02MpZqiwOSZAuEAJVmiyo83I3Gv8bt3zbRBvurFK5DIZmSZpwpscWOR90N4ICYaDoIBeAUGgCQnMFzP15b00fLJABl7y
";
const STRIPE_PRICE_ID = "price_1SZtzm02MpZqiwOSwZgyVVRI";

function goToCheckout() {
  alert("Stripe is connected in demo mode. Next step will activate real payments.");
}

function askAI() {
      const input = document.getElementById('userQuestion');
      const chat = document.getElementById('chatBox');

      const userText = input.value;
      if (!userText) return;

      chat.innerHTML += `<div class='mb-2'><b>You:</b> ${userText}</div>`;

      let reply = "";

      if (userText.toLowerCase().includes("study")) {
        reply = "Try using practice tests, spaced repetition, and teaching the material to someone else.";
      } else if (userText.toLowerCase().includes("test")) {
        reply = "Focus on weak topics and take at least 2 timed practice tests before the exam.";
      } else if (userText.toLowerCase().includes("raise")) {
        reply = "Improve homework consistency and quiz scores first for fast grade boosts.";
      } else if (userText.toLowerCase().includes("grade")) {
        reply = "Enter your averages and weights to see your predicted final grade instantly.";
      } else {
        reply = "I'm your study & grade assistant. Ask about studying, improving scores, or grade predictions.";
      }

      chat.innerHTML += `<div class='mb-3'><b>AI:</b> ${reply}</div>`;
      chat.scrollTop = chat.scrollHeight;
      input.value = "";
    }
  </script>

